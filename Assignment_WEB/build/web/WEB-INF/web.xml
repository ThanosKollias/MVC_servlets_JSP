<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>UploadServ</servlet-name>
        <servlet-class>controllers.UploadServ</servlet-class>
        <multipart-config>
            <max-file-size>10485760</max-file-size>
            <max-request-size>20971520</max-request-size>
            <file-size-threshold>5242880</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet>
        <servlet-name>DownloadServ</servlet-name>
        <servlet-class>controllers.DownloadServ</servlet-class>
        <multipart-config>
            <max-file-size>10485760</max-file-size>
            <max-request-size>20971520</max-request-size>
            <file-size-threshold>5242880</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet>
        <servlet-name>DeleteServ</servlet-name>
        <servlet-class>controllers.DeleteServ</servlet-class>
        <multipart-config>
            <max-file-size>10485760</max-file-size>
            <max-request-size>20971520</max-request-size>
            <file-size-threshold>5242880</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet>
        <servlet-name>MainServ</servlet-name>
        <servlet-class>controllers.MainServ</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AllfilesServ</servlet-name>
        <servlet-class>controllers.AllfilesServ</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UploadServ</servlet-name>
        <url-pattern>/UploadServ</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DownloadServ</servlet-name>
        <url-pattern>/DownloadServ</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteServ</servlet-name>
        <url-pattern>/DeleteServ</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MainServ</servlet-name>
        <url-pattern>/MainServ</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AllfilesServ</servlet-name>
        <url-pattern>/AllfilesServ</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>MainServ.java</welcome-file>
        <welcome-file>MainJSP.jsp</welcome-file>
        
    </welcome-file-list>
</web-app>
